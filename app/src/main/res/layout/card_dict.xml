<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_vertical_margin"
        android:layout_marginRight="@dimen/card_vertical_margin"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_horizontal_margin"
            android:layout_marginTop="@dimen/card_horizontal_margin"
            android:text="语料库"
            android:textColor="@android:color/holo_blue_light" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@color/separationColor" />

        <TextView
            android:id="@+id/main_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_item_margin"
            android:layout_marginTop="@dimen/card_item_margin"/>


    </LinearLayout>
</android.support.v7.widget.CardView>

