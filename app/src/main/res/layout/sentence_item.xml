<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/number_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="1. "
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/item_sentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@+id/item_number"
        android:text="[bi:][lɪŋkt][tu:]"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/item_translate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_sentence"
        android:layout_toRightOf="@+id/item_number"
        android:text="和…联系在一起；与……有关，与……有关系"
        android:textColor="@android:color/white" />
</RelativeLayout>
