<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/cardHeader">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_vertical_margin"
        android:layout_marginRight="@dimen/card_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/network_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_horizontal_margin"
            android:layout_marginTop="@dimen/card_horizontal_margin"
            android:text="获取网络释义"
            android:textColor="@android:color/white" />


    </LinearLayout>
</android.support.v7.widget.CardView>

